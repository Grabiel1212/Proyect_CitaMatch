<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
     <action name="" class="com.opensymphony.xwork2.ActionSupport">
        <result type="redirect">views/Login.jsp</result>
    </action>
    
    </package>
    
    
      <!-- Configuration for the default package. -->
    <package name="controllers" namespace="/" extends="struts-default">
        <action name="home" class="controllers.HomeController" method="execute">
            <result>views/home.jsp</result>
        </action>
        
         <action name="contacto" class="controllers.ContactoControllers" method="execute">
            <result>views/contacto.jsp</result>
        </action>
    </package>
</struts>
